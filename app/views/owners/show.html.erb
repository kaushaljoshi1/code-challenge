<div class="container py-5">
  <h3>Owner Details</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Owners",owners_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_owner_path %>
    </div>
  </div>
  <div class="bg-success">
    <div class="container p-5 text-white">
      <h1><%= @owner.first_name + @owner.last_name %></h1>
    </div>
  </div>


  <div class="bg-success text-white text-center py-3">
    <p class="lead"><%= @owner.email %> </p>
  </div>
</div>

<div class="container py-5">
  <h3>Companies Owned</h3>
  <% if @owner.companies.empty? %>
      <p>No Companies Found</p>
  <% else %>
      <ul class="list-group my-5">
        <% @owner.companies.each do |company| %>
            <a href="<%= company_path(company) %>" target="_blank" class="list-group-item list-group-item-action">
              <%= company.name %>
            </a>
        <% end %>
      </ul>
  <% end %>
</div>
