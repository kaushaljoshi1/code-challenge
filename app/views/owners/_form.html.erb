<div class="py-5">
  <%= form_with(model: @owner, html: { novalidate: true },data: {
      controller: "form",
      target: "form.form",
      action: "ajax:beforeSend->form#submitForm"
  })   do |f| %>

      <div class="row my-lg-3">
        <div class="col-lg-3">
          <label><strong>First Name</strong><br><small class="text-muted">Firstname of the owner</small></label>
        </div>
        <div class="col-lg offset-lg-1">
          <div class="form-group">
            <%= f.text_field :first_name, class: "form-control", placeholder: "Owner First Name", required: true %>
          </div>
        </div>
      </div>

      <div class="row my-lg-3">
        <div class="col-lg-3">
          <label><strong>Last Name</strong><br><small class="text-muted">Lastname of the owner</small></label>
        </div>
        <div class="col-lg offset-lg-1">
          <div class="form-group">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Owner Last Name", required: true %>
          </div>
        </div>
      </div>

      <div class="row my-lg-3">
        <div class="col-lg-3">
          <label><strong>Email</strong><br><small class="text-muted">Email of the owner</small></label>
        </div>
        <div class="col-lg-8 offset-lg-1">
          <div class="form-group">
            <%= f.text_field :email %>
          </div>
        </div>
      </div>


      <div class="row my-lg-3" style="text-align: center">
        <div class="col">
          <div class="form-group">
            <%= f.submit class: "btn btn-success"%>
          </div>
        </div>
      </div>
  <% end %>
</div>
